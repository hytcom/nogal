[info]
_help = "### mysql\
Gestor de conexiones MySQL / MariaDB\
\
https://github.com/hytcom/wiki/blob/master/nogal/docs/mysql.md\
"

[arguments]
autoconn = "Cuando es TRUE, ejecuta el método connect luego de cargar las configuraciones"
base = "Nombre de la base de datos"
charset = "Juego de caracteres con el que se ejecutarán las consultas"
collate = "Conjunto de reglas que se aplican al juego de caracteres charset"
check_colnames = "Activa el chequeo de los nombre de las columnas en la tabla activa"
debug = "Cuando es TRUE el método retorna la sentencia SQL en lugar de ejecutarla"
do = "Cuando es TRUE el método query ejecuta la sentencia pero no retorna resultado"
engine = "Motor de tablas predeterminado"
error_description = "Ante un error mostrará la descripción del mismo"
error_query = "Ante un error mostrará la consulta que le dió origen"
field = "Nombre del campo activo"
file = "Ruta del archivo a exportar ó importar"
file_eol = "Caracter de fin de línea en los métodos export e import"
file_separator = "Separador de campos en los métodos export e import"
file_enclosed = "Encierra los datos en los métodos export e import"
host = "Puede ser o un nombre de host o una dirección IP. Pasando el valor NULL o la cadena localhost se asumirá el host local"
insert_mode = "Tipo de modo INSERT. Valores admitidos:\
	INSERT inserta nuevos registros\
	REPLACE si el nuevo registro duplica un valor PRIMARY KEY o UNIQUE, el antiguo registro es eliminado\
	IGNORE el comando no aborta incluso si ocurren errores durante la ejecución\
"
pass = "Contraseña para acceder a la base de datos"
port = "Puerto donde escucha el servidor MySQL"
socket = "Especifica el socket o la tubería con nombre que debería usarse"
sql = "Ultima sentencia SQL ejecutada o próxima a ejecutarse"
table = "Nombre de la tabla activa en los métodos INSERT y UPDATE"
update_mode = "Tipo de modo UPDATE. Valores admitidos:\
	UPDATE actualiza los registros especificados\
	REPLACE crea un nuevo registro en caso de no hallar el registro especificados\
	IGNORE el comando no aborta incluso si ocurren errores durante la ejecución\
"
user = "Nombre de usuario para acceder a la base de datos"
values = "Datos enviados a los métodos INSERT y UPDATE. Valores admitidos:\
	array asociativo donde cada clave es el nombre del campo en la tabla\
	cadena de variables con el mismo formato que las pasadas por medio de una URL. El valor será analizado utilizando parse_str\
"
where = "Cadena que representa una condición SQL WHERE"
